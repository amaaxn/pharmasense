# =============================================================================
# PharmaSense — Environment Variables
# Copy this file to .env and fill in real values.
# =============================================================================

# --- Supabase (Database + Auth) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db.your-project.supabase.co:5432/postgres

# --- Google Gemini (SERVER-SIDE ONLY — never prefix with VITE_) ---
GEMINI_API_KEY=your-gemini-api-key

# --- ElevenLabs (SERVER-SIDE ONLY) ---
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# --- Snowflake Analytics (SERVER-SIDE ONLY) ---
SNOWFLAKE_ACCOUNT=your-account
SNOWFLAKE_USER=your-user
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=PHARMASENSE
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# --- DigitalOcean Spaces (SERVER-SIDE ONLY) ---
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_BUCKET=pharmasense-assets
SPACES_ACCESS_KEY=your-access-key
SPACES_SECRET_KEY=your-secret-key

# --- Application ---
APP_ENV=development
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]

# --- Frontend (VITE_ prefix — safe for client bundle) ---
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_BASE_URL=http://localhost:8000
